 <section class="about_us_sec py_9 pb-0">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="about_txt_sec">
                                <span>{{ section.settings.title }}</span>
                                <h2>{{ section.settings.subtitle }}</h2>
                                <p>{{ section.settings.description }}</p>
                                <div class="about_btn">
                                    <a href="{{ section.settings.btn_url }}" class="theme_btn">{{ section.settings.btn_text }}</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="about_img">
                                <img src="{{ section.settings.image | img_url: 'master' }}" alt>
                            </div>
                        </div>

                    </div>
                </div>

            </section>
{% schema %}
  {
    "name": "Who we are",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
        {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Title"
      },
        {
        "type": "textarea",
        "id": "description",
        "label": "description"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "button text"
      },
        {
        "type": "url",
        "id": "btn_url",
        "label": "Button URL"
      }
      ,
        {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Who We are"
      }
    ]
  }
{% endschema %}

